<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="FacebookLoginButton">
        <item name="android:radius">50dp</item>
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">72dp</item>
    </style>

    <style name="MyEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/colorLightGrey</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@android:color/white</item>
    </style>

    <style name="CircularProgress" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="BottomNavigation">
        <item name="android:background">@android:color/white</item>
        <item name="itemBackground">@drawable/background_bottomnav</item>
        <item name="itemIconTint">@color/colorReallyLightGrey</item>
        <item name="itemTextColor">@color/colorPrimary</item>
        <item name="android:state_pressed">true</item>
        <item name="paddingStart">8dp</item>
        <item name="paddingEnd">8dp</item>
        <item name="android:paddingBottom">-8dp</item>
    </style>

    <style name="roboto_regular_textview" parent="@android:style/Widget.TextView">
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="roboto_medium_textview" parent="@android:style/Widget.TextView">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="roboto_light_textview" parent="@android:style/Widget.TextView">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="Theme.Custom" parent="@android:style/Theme.Material.Light">
        <item name="windowActionBar">false</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="CustomActionBar" parent="@android:style/Widget.ActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <!-- Support library compatibility -->
        <item name="windowActionBarOverlay">true</item>
    </style>
</resources>
